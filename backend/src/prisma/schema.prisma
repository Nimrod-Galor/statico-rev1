generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique @default("subscriber")
  description String
  default     Boolean @default(false)
  User        User[]
}

model User {
  id                       String            @id @default(auto()) @map("_id") @db.ObjectId
  createdAt                DateTime          @default(now())
  email                    String?           @unique
  password                 String?
  salt                     String?
  userName                 String?
  role                     Role              @relation(fields: [roleId], references: [id])
  roleId                   String            @db.ObjectId
  products                 Product[]
  comments                 Comment[]
  refreshToken             String?
  token                    RememberMeToken[]
  emailVerified            Boolean           @default(false)
  verificationToken        String?
  verificationTokenExpires DateTime?
  facebookId               String?           @unique
  googleId                 String?           @unique
}

model RememberMeToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  token     String   @unique
  createdAt DateTime @default(now())
}

model Page {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  metatitle       String?
  metadescription String?
  slug            String? @unique
  title           String
  body            String
  publish         Boolean @default(false)
}

model Product {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime  @default(now())
  metatitle       String?
  metadescription String?
  slug            String?   @unique
  title           String
  body            String
  price           Int
  stock           Int       @default(0)
  category        Category  @relation(fields: [categoryId], references: [id])
  publish         Boolean   @default(false)
  viewCount       Int       @default(0)
  author          User      @relation(fields: [authorId], references: [id])
  authorId        String    @db.ObjectId
  imageUrl        String
  comments        Comment[]
  categoryId      String    @db.ObjectId
}

model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  slug        String    @unique
  parentId    String?   @db.ObjectId
  Product     Product[]
}

model Comment {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  comment   String
  publish   Boolean   @default(false)
  product   Product   @relation(fields: [productId], references: [id])
  productId String    @db.ObjectId
  author    User      @relation(fields: [authorId], references: [id])
  authorId  String    @db.ObjectId
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId  String?   @db.ObjectId // This field will hold the ID of the parent comment, if any
  replies   Comment[] @relation("CommentToComment")
  likes     Int       @default(0)
  dislikes  Int       @default(0)
}
